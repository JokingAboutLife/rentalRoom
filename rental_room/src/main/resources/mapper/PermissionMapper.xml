<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gxust.edu.rental_room.mapper.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.gxust.edu.rental_room.mapper.PermissionMapper">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
        <result column="types" jdbcType="INTEGER" property="types"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="levels" jdbcType="INTEGER" property="levels"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="sorts" jdbcType="INTEGER" property="sorts"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="component_name" jdbcType="VARCHAR" property="componentName"/>
        <result column="component_path" jdbcType="VARCHAR" property="componentPath"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
    </resultMap>

    <resultMap id="LevelResultMap" type="permission">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
        <result column="types" jdbcType="INTEGER" property="types"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="levels" jdbcType="INTEGER" property="levels"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="sorts" jdbcType="INTEGER" property="sorts"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="component_name" jdbcType="VARCHAR" property="componentName"/>
        <result column="component_path" jdbcType="VARCHAR" property="componentPath"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <collection property="children" columnPrefix="c_" ofType="permission">
            <id column="id" jdbcType="INTEGER" property="id"/>
            <result column="name" jdbcType="VARCHAR" property="name"/>
            <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
            <result column="types" jdbcType="INTEGER" property="types"/>
            <result column="url" jdbcType="VARCHAR" property="url"/>
            <result column="levels" jdbcType="INTEGER" property="levels"/>
            <result column="state" jdbcType="INTEGER" property="state"/>
            <result column="sorts" jdbcType="INTEGER" property="sorts"/>
            <result column="description" jdbcType="VARCHAR" property="description"/>
            <result column="component_name" jdbcType="VARCHAR" property="componentName"/>
            <result column="component_path" jdbcType="VARCHAR" property="componentPath"/>
            <result column="icon" jdbcType="VARCHAR" property="icon"/>
        </collection>
    </resultMap>

    <select id="findByQuery" resultType="permission" parameterType="roleQuery">
        select * from t_permission
        <where>
            <if test="name != null and name!=''">
                <bind name="likeName" value="'%' + _parameter.name + '%'"/>
                and name like #{likeName}
            </if>
            <if test="description != null and description!=''">
                <bind name="likeDescription" value="'%' + _parameter.description + '%'"/>
                and description like #{likeDescription}
            </if>
        </where>
    </select>

    <!--根据Id查询-->
    <select id="findById" resultType="permission" parameterType="int">
        SELECT * from t_permission where id = #{id,jdbcType=INTEGER}
    </select>

    <!--添加-->
    <insert id="add" parameterType="permission" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        insert into t_permission
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name,
            parent_id,
            types,
            url,
            levels,
            state,
            sorts,
            description,
            component_name,
            component_path,
            icon
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{name},
            #{parentId},
            #{types},
            #{url},
            #{levels},
            #{state},
            #{sorts},
            #{description},
            #{componentName},
            #{componentPath},
            #{icon}
        </trim>
    </insert>

    <!--删除-->
    <delete id="deleteById" parameterType="int">
      delete from t_permission where id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds" parameterType="int">
        delete from t_permission where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--更新-->
    <update id="update" parameterType="role">
        update t_permission
        <set>
            <if test="name != null and name != ''">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null and parentId != ''">
                parent_id = #{parentId,jdbcType=INTEGER},
            </if>
            <if test="types != null and types != ''">
                types = #{types,jdbcType=INTEGER},
            </if>
            <if test="url != null and url != ''">
                url = #{url,jdbcType=VARCHAR},
            </if>
            <if test="levels != null and levels != ''">
                levels = #{levels,jdbcType=INTEGER},
            </if>
            <if test="state != null and state != ''">
                state = #{state,jdbcType=INTEGER},
            </if>
            <if test="sorts != null and sorts != ''">
                sorts = #{sorts,jdbcType=INTEGER},
            </if>
            <if test="description != null and description != ''">
                description = #{description,jdbcType=VARCHAR},
            </if>
            <if test="componentName != null and componentName != ''">
                component_name = #{componentName,jdbcType=VARCHAR},
            </if>
            <if test="componentPath != null and componentPath != ''">
                component_path = #{componentPath,jdbcType=VARCHAR},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="findLevelMenu" resultMap="LevelResultMap">
        SELECT
            p.*,
            c.NAME c_name,
            c.parent_id c_parent_id,
            c.types c_types,
            c.url c_url,
            c.levels c_levels,
            c.state c_state,
            c.sorts c_sorts,
            c.description c_description,
            c.component_name c_component_name,
            c.component_path c_component_path,
            c.icon c_icon
        FROM
            t_permission p
            LEFT JOIN t_permission c ON p.id = c.parent_id
        WHERE
            p.id IN (
            SELECT
                perm_id
            FROM
                t_role_permission
            WHERE
            role_id = ( SELECT role_id FROM t_user_role WHERE user_id = #{userId} ))
            AND p.parent_id = 0
            ORDER BY p.sorts
    </select>

    <insert id="bind">
        insert into t_role_permission(role_id, perm_id) values (#{roleId},#{permissionId})
    </insert>

    <delete id="unBind">
        delete from t_role_permission where role_id = #{roleId} and perm_id = #{permissionId}
    </delete>

</mapper>