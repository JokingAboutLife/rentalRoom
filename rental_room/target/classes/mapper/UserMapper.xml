<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gxust.edu.rental_room.mapper.UserMapper">

    <sql id="Base_Column_List">
        id,
        account,
        username,
        email,
        realname,
        city,
        status
    </sql>

    <select id="login" resultType="user">
        select
        <include refid="Base_Column_List"/>
        from t_user where account = #{account} and password = #{password}
    </select>

    <select id="findByQuery" resultType="user" parameterType="userQuery">
        select
        <include refid="Base_Column_List"/>
        from t_user
        <where>
            <if test="username != null and username!=''">
                <bind name="likeUsername" value="'%' + _parameter.username + '%'"/>
                and username like #{likeUsername}
            </if>
            <if test="account != null and account!=''">
                <bind name="likeAccount" value="'%' + _parameter.account + '%'"/>
                and account like #{likeAccount}
            </if>
        </where>
    </select>

    <!--根据Id查询-->
    <select id="findById" resultType="user" parameterType="int">
        SELECT
        <include refid="Base_Column_List"/>
        from t_user where id = #{id,jdbcType=INTEGER}
    </select>

    <!--添加-->
    <insert id="add" parameterType="user" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        insert into t_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            account,
            username,
            password,
            realname,
            city,
            email,
            status
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{account,jdbcType=VARCHAR},
            #{username,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{realname,jdbcType=VARCHAR},
            #{city,jdbcType=VARCHAR},
            #{email,jdbcType=VARCHAR},
            #{status,jdbcType=TINYINT}
        </trim>
    </insert>

    <!--删除-->
    <delete id="deleteById" parameterType="int">
      delete from t_user where id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteByIds" parameterType="int">
        delete from t_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--更新-->
    <update id="update" parameterType="user">
        update t_user
        <set>
            <if test="username != null and username != ''">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null and password != ''">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="realname != null and realname != ''">
                realname = #{realname,jdbcType=VARCHAR},
            </if>
            <if test="city != null and city != ''">
                city = #{city,jdbcType=VARCHAR},
            </if>
            <if test="email != null and email != ''">
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=TINYINT}
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

</mapper>